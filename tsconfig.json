{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "types",
    "importHelpers": true,
    "allowJs": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": ["es2018"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
